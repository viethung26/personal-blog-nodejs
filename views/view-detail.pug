html
    head
        style(type="text/css").
            .article {
                width: 700px;
                margin: auto;
                padding: 5px;
            }
            .article p {
                white-space: pre-wrap;
            }

    body
        button
            a(href="/") Back
        if article
             .article
                h1= article.title
                p
                    span 
                        i= new Date(article.createdAt).toLocaleString('vi-VN')
                    span  by 
                        b= article.author.username
                p= article.content
        else 
            h1 Page not found